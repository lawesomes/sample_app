<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class ="row"> 
	<div class="span6 offset3">
	
		<%= form_for(@user) do |f| %>
			<%# creates form tags using @user object defined in controller)
			@user here is a new user -> @user = user.new
			knows to construct form with post method for creation %>
		<%= render 'shared/error_messages' %> 
			<%# renders a partial in /views/shared%>
		
		<%= f.label :name %> 
		<%= f.text_field :name %> 

		<%= f.label :email %> 
		<%= f.text_field :email %> 

		<%= f.label :password %> 
		<%= f.password_field :password %>

		<%= f.label :password_confirmation, "Confirmation" %> 
		<%= f.password_field :password_confirmation %>

		<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>  
		<% end %> 
	</div>
</div> 

